<header>
    <section>
        <img src="/avatar-uploads/{{user.avatar}}" alt="">
        <h2 data-user_id="{{user.id}}">{{user.username}}</h2>

        {{#isEqual user_id user.id}}
        <form id="avatar-form" action="/api/users/upload/avatar/" method="post" enctype="multipart/form-data">
            <input data-file type="file" name="image" id="avatar">
            <input type="submit" value="Upload">
        </form>
        {{/isEqual}}

    </section>
</header>

<main class="forum-main">
    <section class="post-container">
        {{#each posts as |post|}}
        {{> post-timeline}}
        {{/each}}
    </section>
    <aside>

    </aside>
</main>
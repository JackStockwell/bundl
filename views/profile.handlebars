<main class="forum-wrapper">
    <header class="forum-header">
        <section>
            <div class="forum-title">
                <img class="profile-img" src="http://localhost:3001/assets/avatar-uploads/{{user.avatar}}" alt="User's profile pic">
                <h2 data-user_id="{{user.id}}">{{user.username}}</h2>
            </div>
            {{!-- Checks to see if the logged user and the current profile are the same --}}
            {{#isEqual user_id user.id}}
            <form id="avatar-form" action="/api/users/upload/avatar/" method="post" enctype="multipart/form-data">
                <input data-file type="file" name="image" id="avatar">
                <input type="submit" value="Upload" onclick="addAvatar(event)">
            </form>
            {{/isEqual}}

        </section>
    </header>
    <nav class="profile-nav">
        <button class="btn-dark">All posts</button>
    </nav>
    <section class="forum-main">
        {{!-- Gets all the posts, renders them --}}
        <section class="post-container">
            {{#each posts as |post|}}
            {{> post-timeline}}
            {{/each}}
        </section> 
        <aside>
            <section class="bundl-list-div">
                <hr>
                <h2>my bundls</h2>
                <hr>
                {{!-- Gets all the forums that the user follows --}}
                <div>
                    {{#each user.forums as |forum|}}
                    {{> forum-list}}
                    {{/each}}
                </div>
            </section>
        </aside>
    </section>
</main>
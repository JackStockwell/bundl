<div class="wrapper">
    <div class="profile-login">
        <h2 class="sign-in">Sign In to Your Profile</h2>
        <form class="login-form" onsubmit="handleLogin(event)">
            <div class="info-format">
                <label for="email">Email:</label>
                <input class="form-input" type="text" id="email-login">
            </div>
            <div class="info-format">
                <label for="password">Password:</label>
                <input class="form-input" type="text" id="password-login">
            </div>
            <div class="info-format">
                <button onclick="handleLogin(event)">Login</button>
            </div>
        </form>
    </div>


    <div class="profile-signup">
        <h2 class="sign-up">Sign Up For a Profile Today!</h2>
        <form class="signup-form" onsubmit="handleSignup(event)">
            <div class="info-format">
                <label for="username">Username:</label>
                <input class="form-input" type="text" id="username-signup" placeholder="Username">
            </div>
            <div class="info-format">
                <label for="email">Email:</label>
                <input class="form-input" type="text" id="email-signup" placeholder="Email">
            </div>
            <div class="info-format">
                <label for="password">Password:</label>
                <input class="form-input" type="text" id="password-signup" placeholder="Password">
            </div>
            <div class="info-format">
                <label for="password">Confirm Password:</label>
                <input class="form-input" type="text" id="confirm-signup" placeholder="Confirm password">
            </div>
            <div class="info-format">
                <button onsubmit="handleSignup(event)">Sign-Up</button>
            </div>
        </form>
    </div>
</div>

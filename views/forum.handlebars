<header>
    <section>
        <h2 data-user_id="{{user_id}}" data-forum_id="{{forum_id}}">{{username}}</h2>

    </section>
</header>

<main>
    {{!-- POST FORM CONTAINER --}}
    <section class="new-post">
        <form onsubmit="newPost(event)">
            <input type="text" name="title" id="postTitle">
            <input type="text" name="content" id="postContent">
            <button onclick="newPost(event)" type="button">Post</button>
        </form>
    </section>


    <section class="forum-wrapper">
        <section>
            <p id="username-handle" data-username="{{user.id}}">{{forum.name}}</p>
            <button class="btn" type="button" id="follow-user">Follow</button>
        </section>
    </section>

    <section class="post-container">
        {{#each forum.posts as |post|}}
        {{> post-timeline}}
        {{/each}}
    </section>
</main>